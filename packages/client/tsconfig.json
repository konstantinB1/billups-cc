{
    "extends": "../../tsconfig.json",
    "include": ["src/**/*", "vite.config.ts"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "types": ["vite/client"],
        "paths": {
            "@assets/*": ["src/assets/*"]
        }
    }
}
